name: {{ item }}
root:  ~/{{ item }}

windows:
  - console:
      layout: main-vertical
      root: ~/{{ item }}/{{ item }}-api
      panes:
        - rails console
  - servers:
      layout: main-vertical
      panes:
        - cd {{ item }}-api && rails server -b 0.0.0.0
        - cd {{ item }}-app && ember serve
  - rails:
      layout: main-horizontal
      panes:
        - cd {{ item }}-api
  - ember-pods:
      layout: main-horizontal
      panes:
        - cd {{ item }}-app
  - ember:
      layout: main-horizontal
      panes:
        - cd {{ item }}-app
  - data:
      layout: main-horizontal
      root: ~/prepd/data/{{ item }}
      panes:
        -
